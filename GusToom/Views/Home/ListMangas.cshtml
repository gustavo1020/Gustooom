@model IEnumerable<GusToom.Models.Manga>
@{
    var mangas = ViewBag.mangas;
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/site.css">
	<link rel="ico" href="../img/Logo.png">
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet"> 
	<title>ガスToom</title>
</head>

<body>
	<header>
		<div class="contenedor">
			<h2 class="logotipo">ガスToom</h2>
			<nav>
                <a class="link" asp-action="Index">Inicio</a>
                <a class="activo" asp-action="ListMangas">Mangas</a>
                <a class="link" asp-action="ListCategoria">Generos</a>
                <a class="link" asp-action="MangaAdd">Publicar</a>
                <a class="link" asp-action="">Estados</a>
                <a class="link" asp-action="">Autores</a>
			</nav>
		</div>
	</header>

	<main>
		<div class="Menu-principal-del-usuario">
			<div class="contenedor">
        <div>
          <p class="descripcion">
            <table>
              <tbody>
                <tr>
                  <th scope="col">Manga</th>
                  <th scope="col">Genero</th>
                  <th scope="col">Volumenes</th>
                  <th scope="col">Puntuacion</th>
                  <th scope="col">Autor</th>
                  <th scope="col">Precio AVG</th>
                  <th scope="col">Fecha de emision</th>
                  <th scope="col">Link del Manga</th>
                </tr>
                 
            @foreach (GusToom.Models.Manga manga in Model)
                {
                  <tr>
                    <th>@manga.nombre</th>
                    <td>@manga.categoriamanga.nombre</td>
                    <td>@manga.volumenes</td>
                    <td>@manga.puntuacion</td>
                    <th>@manga.autor</th>
                    <td>@manga.preciopromedio</td>
                    <td>@manga.fechaemitido</td>
                    <td>@manga.link</td>
                  </tr>
                }    
            </tbody>

            </table>
				</p>
				<p>
					  <a role="button" class="boton" asp-action="MangaAdd"><i class="fas fa-coffee"></i>ガスPublicar Manga </a>
				    <a role="button" class="boton" asp-action="Categoriaadd"><i class="fas fa-book-reader"></i>Agregar Genero</a>
				</p>
              <table class="table table-bordered table-hover table-sm">


        </div>
			</div>
		</div>
	</main>
	
	<script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
	<script src="js/main.js"></script>
</body>
</html>


                       
                       
                       
                       
                      


                    
                    
                        
                    
                   
                        
                    
                   
                        
                   
                   
                        
